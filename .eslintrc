{
  "extends": ["eslint:recommended"],
  "parser": "babel-eslint",
  "env": { "node" :true,
           "es6":true
         },
  "ecmaFeatures": {
    "jsx": true,
    "experimentalObjectRestSpread": true
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "comma-dangle" : ["error","only-multiline"],
    "no-unused-vars" : ["error", { "varsIgnorePattern": "_",
                                   "args":"none",
                                   "argsIgnorePattern": "_",}],
    "no-console" : "warn",
    "react/jsx-uses-vars": 1,
  },
}
